<h1>Create a new Post</h1>

<%= form_for @post do |f| %>
  <%= f.label :title%>
  <%= f.text_field :title %>

  <br />

  <%= f.label :author %>
  <%= f.text_field :author %>

  <br />

  <%= f.label :body %>
  <%= f.text_area :body %>

  <br />

  <%= f.submit%>
<% end %>

<%= link_to 'All Posts', root_path %> 
